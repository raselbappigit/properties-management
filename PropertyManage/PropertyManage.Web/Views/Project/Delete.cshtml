@model PropertyManage.Domain.Project
<div id="delete-project-type">
    <div class="content-box">
        <div class="box-body">
            <div class="box-header clear">
                <h2>
                    Delete Project
                </h2>
            </div>
            <div class="box-wrap clear">
                <div class="form bt-space15">
                    <div class="notification note-attention">
                        <p>
                            <strong>Attention : </strong>Are you sure you want to delete this?
                        </p>
                    </div>
                    <div class="columns clear bt-space15">
                        <div class="form-field clear">
                            <div class="form-label size-120 fl-space2">
                                @Html.LabelFor(m => m.Name)
                            </div>
                            <div class="text fl-space2">
                                @Html.DisplayFor(m => m.Name)
                            </div>
                        </div>
                        <div class="form-field clear">
                            <div class="form-label size-120 fl-space2">
                                @Html.LabelFor(m => m.Location)
                            </div>
                            <div class="text fl-space2">
                                @Html.DisplayFor(m => m.Location)
                            </div>
                        </div>
                        <div class="form-field clear">
                            <div class="form-label size-120 fl-space2">
                                @Html.LabelFor(m => m.Description)
                            </div>
                            <div class="text fl-space2">
                                @Html.DisplayFor(m => m.Description)
                            </div>
                        </div>
                        <div class="form-field clear">
                            <div class="form-label size-120 fl-space2">
                                @Html.LabelFor(m => m.EstimatedArea)
                            </div>
                            <div class="text fl-space2">
                                @Html.DisplayFor(m => m.EstimatedArea)
                            </div>
                        </div>
                        <div class="form-field clear">
                            <div class="form-label size-120 fl-space2">
                                @Html.LabelFor(m => m.UnitValueId, "Unit Value")
                            </div>
                            <div class="text fl-space2">
                                @Html.DisplayFor(m => m.UnitValue.Name)
                            </div>
                        </div>
                    </div>
                    <div class="rule2">
                    </div>
                    @using (Html.BeginForm())
                    {
                        <div class="clear">
                            <input class="button red" type="submit" value="Delete" />
                            | @Html.ActionLink("Cencel", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
