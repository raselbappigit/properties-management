@model PropertyManage.Domain.Supplier
<div id="edit-supplier-type">
    <div class="content-box">
        <div class="box-body">
            <div class="box-header clear">
                <h2>
                    Edit Supplier
                </h2>
            </div>
            <div class="box-wrap clear">
                <div class="form bt-space15">
                    @using (Html.BeginForm("Edit", "Supplier"))
                    {
                        @Html.HiddenFor(m => m.SupplierId)
                        <div class="columns clear bt-space15">
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Name)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Name)
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Address)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextAreaFor(m => m.Address)
                                    @Html.ValidationMessageFor(m => m.Address)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Phone)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Phone)
                                    @Html.ValidationMessageFor(m => m.Phone)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Mobile)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Mobile)
                                    @Html.ValidationMessageFor(m => m.Mobile)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Fax)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Fax)
                                    @Html.ValidationMessageFor(m => m.Fax)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Email)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Email)
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.ContactPerson)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.ContactPerson)
                                    @Html.ValidationMessageFor(m => m.ContactPerson)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.ContactDesignation)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.ContactDesignation)
                                    @Html.ValidationMessageFor(m => m.ContactDesignation)
                                </div>
                            </div>
                        </div>
                        <div class="rule2">
                        </div>
                        <div class="clear">
                            <input class="button green" type="submit" value="Edit" />
                            | @Html.ActionLink("Cencel", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
