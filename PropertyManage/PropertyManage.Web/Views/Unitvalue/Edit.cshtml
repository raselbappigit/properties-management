@model PropertyManage.Domain.UnitValue
<div id="edit-unit-value">
    <div class="content-box">
        <div class="box-body">
            <div class="box-header clear">
                <h2>
                    Edit Unit Of Value
                </h2>
            </div>
            <div class="box-wrap clear">
                <div class="form bt-space15">
                    @using (Html.BeginForm("Edit", "Unitvalue"))
                    {
                        @Html.HiddenFor(m => m.UnitValueId)
                        <div class="columns clear bt-space15">
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Name)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextBoxFor(m => m.Name)
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.Note)
                                </div>
                                <div class="text fl-space2">
                                    @Html.TextAreaFor(m => m.Note)
                                    @Html.ValidationMessageFor(m => m.Note)
                                </div>
                            </div>
                            <div class="form-field clear">
                                <div class="form-label size-120 fl-space2">
                                    @Html.LabelFor(m => m.UnitTypeId, "Unit Type")
                                </div>
                                <div class="text fl-space2">
                                    @Html.DropDownListFor(m => m.UnitTypeId, (IEnumerable<SelectListItem>)ViewBag.UnitTypeId)
                                    @Html.ValidationMessageFor(m => m.UnitTypeId)
                                </div>
                            </div>
                        </div>
                        <div class="rule2">
                        </div>
                        <div class="clear">
                            <input class="button green" type="submit" value="Edit" />
                            | @Html.ActionLink("Cencel", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
